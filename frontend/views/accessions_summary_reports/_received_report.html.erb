<h2><%= I18n.t("plugins.accessions_received_report.title") %></h2>
<div>
  <table class="table table-striped table-bordered table-condensed">
    <tbody>
    <tr> 
      <th><%= @params['start_date'] %> &mdash; <%= @params['end_date'] %></th>
      <th><%= I18n.t("plugins.accessions_received_report.number") %></th>
      <th><%= I18n.t("plugins.accessions_received_report.extent") %></th>
    </tr>
    <tr>
      <th><%= I18n.t("plugins.accessions_received_report.new") %></th>
      <td><%= @data['new_accs'] %></td>
      <td><%= sprintf("%.2f", @data['new_extent']) %></td>
    </tr>
    <tr>
      <th><%= I18n.t("plugins.accessions_received_report.additions") %></th>
      <td><%= @data['add_accs'] %></td>
      <td><%= sprintf("%.2f", @data['add_extent']) %></td>
    </tr>
    <tr>
      <th><%= I18n.t("plugins.accessions_received_report.total") %></th>
      <td><%= @data['total_accs'] %></td>
      <td><%= sprintf("%.2f", @data['total_extent']) %></td>
    </tr>
    </tbody>
  </table>

</div>
